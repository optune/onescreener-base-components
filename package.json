{
  "name": "@optune/onescreener-base-components",
  "version": "1.0.0",
  "description": "Onescreener Base Components",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf lib",
    "remove-react": "rm -rf node_modules/react node_modules/react-dom  node_modules/styled-components",
    "remove-react:windows": "rimraf -rf node_modules/react node_modules/react-dom  node_modules/styled-components",
    "lint": "eslint .",
    "prepublishOnly": "npm run build:prod",
    "build": "meteor npm run remove-react && rollup -c config/dev.js",
    "build:windows": "meteor npm run remove-react:windows && rollup -c config/dev.js",
    "build:prod": "meteor npm run remove-react && rollup -c config/prod.js",
    "watch": "meteor npm run remove-react && rollup -c config/dev.js -w",
    "watch:windows": "meteor npm run remove-react:windows && rollup -c config/dev.js -w",
    "svg": "styled-svg src/components/icons/*.svg",
    "test": "echo \"t'Saul Goodman\" && exit 0",
    "storybook": "start-storybook --ci -p 6006",
    "build-storybook": "build-storybook"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "eslintConfig": {
    "settings": {
      "react": {
        "version": "^16.4.2"
      }
    },
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "2018",
      "sourceType": "module"
    },
    "plugins": [
      "import",
      "prettier",
      "react"
    ],
    "extends": [
      "plugin:react/recommended",
      "prettier"
    ],
    "rules": {
      "max-lines": "error",
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ],
      "prettier/prettier": "error",
      "react/require-default-props": "off",
      "react/no-array-index-key": "off",
      "react/forbid-prop-types": "off"
    }
  },
  "eslintIgnore": [
    "lib/**/*.js"
  ],
  "browserslist": "last 2 chrome versions or last 2 firefox versions",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "babel-plugin-styled-components",
        {
          "ssr": true,
          "displayName": true
        }
      ]
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@rollup/plugin-url": "^4.0.1",
    "babel-eslint": "^10.0.3",
    "babel-plugin-styled-components": "^1.10.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "husky": "^4.0.10",
    "prettier": "^1.19.1",
    "rollup": "^1.29.0",
    "rollup-plugin-analyzer": "^3.2.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-uglify": "^6.0.4"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "dateformat": "^3.0.3",
    "isomorphic-fetch": "^2.2.1",
    "react-html-parser": "^2.0.2",
    "react-player": "^1.14.2",
    "react-responsive": "^8.0.1"
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-components": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/optune/onescreener-base-components.git"
  },
  "keywords": [
    "react"
  ],
  "files": [
    "lib/**/*"
  ],
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "author": "optune",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/optune/onescreener-base-components/issues"
  },
  "homepage": "https://github.com/optune/onescreener-base-components#readme",
  "directories": {
    "lib": "lib"
  }
}
